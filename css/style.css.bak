/* ========================================
   MERGED GLOBAL STYLES (from css/style.css)
   ======================================== */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary-color: #6f7cff;
    --primary-dark: #5a68e8;
    --primary-light: #8a98ff;
    --bg-main: #0a0a1e;
    --bg-card: #15152e;
    --text-main: #ffffff;
    --text-muted: #b0b8cc;
    --border-soft: rgba(255, 255, 255, 0.08);
    --accent: #ff6b6b;
    --success: #10b981;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: var(--bg-main);
    color: var(--text-main);
    line-height: 1.6;
    overflow-x: hidden;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.main-content {
    width: 100%;
}

/* ========================================
   TYPOGRAPHY
   ======================================== */

h1,
h2,
h3,
h4,
h5,
h6 {
    font-weight: 700;
    color: var(--text-main);
}

h1 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    line-height: 1.2;
}

h2 {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    line-height: 1.2;
}

h3 {
    font-size: 1.25rem;
}

h4 {
    font-size: 1rem;
}

p {
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.7;
}

a {
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
}

/* ========================================
   BUTTONS & LINKS
   ======================================== */

.primary-btn {
    display: inline-flex;
    align-items: center;
    padding: 12px 32px;
    background: linear-gradient(135deg, #6f7cff, #b46bff);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.primary-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(111, 124, 255, 0.3);
}

.btn-primary {
    display: inline-block;
    padding: 12px 32px;
    background: linear-gradient(135deg, #6f7cff, #b46bff);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(111, 124, 255, 0.3);
}

.btn-outline {
    display: inline-block;
    padding: 12px 32px;
    background: transparent;
    color: #6f7cff;
    border: 1px solid rgba(111, 124, 255, 0.5);
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    cursor: pointer;
}

.btn-outline:hover {
    background: rgba(111, 124, 255, 0.1);
    border-color: #6f7cff;
}

/* ========================================
   HEADER & NAVIGATION
   ======================================== */

.header {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 999;
    background: linear-gradient(to bottom, rgba(10, 10, 30, 0.95), rgba(10, 10, 30, 0.7));
    backdrop-filter: blur(16px);
    border-bottom: 1px solid var(--border-soft);
}

.header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 12px 24px;
    position: relative;
    /* allow absolute logo & CTA */
    display: flex;
    align-items: center;
    justify-content: center;
    /* keep nav centered */
    gap: 24px;
    height: 72px;
    /* vertical spacing */
}

.logo {
    position: absolute;
    left: 24px;
    top: 50%;
    transform: translateY(-50%);
}

.logo img {
    height: 24px;
    width: auto;
    display: block;
}

.nav-links {
    list-style: none;
    display: flex;
    align-items: center;
    gap: 28px;
    margin: 0 auto;
    /* center the UL within header */
    justify-content: center;
}

.nav-links>li>a {
    font-size: 15px;
    color: var(--text-muted);
    font-weight: 500;
    transition: color 0.3s ease;
}

.nav-links>li>a:hover {
    color: #ffffff;
}

/* Mega Dropdown */
.mega-dropdown {
    position: relative;
}

.mega-dropdown>a {
    display: flex;
    align-items: center;
    gap: 5px;
}

.arrow {
    font-size: 0.75rem;
}

.mega-menu {
    position: fixed;
    top: 90px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 60px;
    padding: 50px 60px;
    min-width: 1000px;
    max-width: 90vw;
    background: linear-gradient(180deg, rgba(15, 15, 45, 0.98), rgba(10, 10, 30, 0.98));
    border-radius: 20px;
    border: 1px solid var(--border-soft);
    backdrop-filter: blur(20px);
    opacity: 0;
    pointer-events: none;
    transition: 0.3s ease;
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.5);
    z-index: 998;
}

.mega-dropdown:hover .mega-menu {
    opacity: 1;
    pointer-events: auto;
}

.mega-column h4 {
    font-size: 14px;
    color: var(--text-muted);
    margin-bottom: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.mega-column a {
    display: block;
    font-size: 15px;
    margin-bottom: 10px;
    color: #ffffff;
    transition: color 0.3s ease;
}

.mega-column a:hover {
    color: #6f7cff;
}

.store-btn {
    display: inline-block;
    margin-top: 8px;
    padding: 10px 16px;
    border-radius: 10px;
    background: linear-gradient(135deg, #6f7cff, #b46bff);
    color: white;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
}

.store-btn:hover {
    background: linear-gradient(135deg, #5a68e8, #a357e8);
}

.get-started-btn,
.primary-btn {
    background: transparent;
    border: 1px solid rgb(244, 237, 237);
    color: white;
    padding: 10px 38px;
    border-radius: 50px;
    cursor: pointer;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    white-space: nowrap;
}

/* Animated one-shot outline pulse on hover (white radius line) */
.get-started-btn {
    position: absolute;
    /* place CTA at right of header */
    right: 24px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 40;
    overflow: visible;
}

.get-started-btn::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%) scale(0.9);
    width: calc(100% + 12px);
    height: calc(100% + 12px);
    border-radius: 12px;
    border: 2px solid rgba(255, 255, 255, 0);
    pointer-events: none;
    transition: border-color 0.25s ease, transform 0.35s ease, opacity 0.35s ease;
    opacity: 0;
}

@keyframes outlinePulse {
    0% {
        transform: translate(-50%, -50%) scale(0.9);
        opacity: 0.0;
        border-color: rgba(255, 255, 255, 0.0);
    }

    40% {
        transform: translate(-50%, -50%) scale(1.03);
        opacity: 1;
        border-color: rgba(255, 255, 255, 0.95);
    }

    100% {
        transform: translate(-50%, -50%) scale(1.08);
        opacity: 0;
        border-color: rgba(255, 255, 255, 0);
    }
}

.get-started-btn:hover {
    background: rgba(111, 124, 255, 0.06);
    border-color: rgba(111, 124, 255, 0.5);
}

.get-started-btn:hover::after {
    animation: outlinePulse 0.6s ease forwards;
}

/* ========================================
   HERO SECTION
   ======================================== */

.hero {
    padding-top: 140px;
    background-image: url(https://wpriverthemes.com/nexux/wp-content/uploads/2024/12/background.png);
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    position: relative;
    overflow: hidden;
    min-height: 740px;
}

/* subtle purple radial glow at bottom like the original */
.hero::before {
    content: '';
    position: absolute;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
    width: 120%;
    height: 360px;
    pointer-events: none;
    background: radial-gradient(40% 30% at 50% 40%, rgba(95, 72, 255, 0.22), rgba(44, 22, 82, 0.0) 55%), linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(4, 6, 26, 0.5) 60%);
    filter: blur(12px);
    z-index: 0;
}

/* ensure hero content sits on top of glow */
.hero .hero-content {
    position: relative;
    z-index: 2;
}

.hero-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
}

.subtitle-center {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin-bottom: 18px;
}

.subtitle-center img {
    height: 20px;
    width: auto;
}

.subtitle-center p {
    color: #ffffff;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.hero h1 {
    font-size: 56px;
    font-weight: 700;
    line-height: 1.15;
    margin-bottom: 20px;
}

.hero>.hero-content>p {
    color: var(--text-muted);
    font-size: 16px;
    margin-bottom: 30px;
}

/* Subscribe Form */
#subscribe-content {
    margin: 40px 0 60px;
}

.subscribe-input-wrapper {
    max-width: 540px;
    margin: 0 auto;
    display: flex;
    background: #34399b;
    border-radius: 50px;
    padding: 8px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.08);
}

.form-control-wrap {
    flex: 1;
}

.form-control-wrap input {
    flex: 1;
    background: transparent;
    border: none;
    padding: 12px 10px 12px 12px;
    /* make left padding small so placeholder sticks left */
    color: white;
    outline: none;
    font-size: 0.95rem;
}

.form-control-wrap input::placeholder {
    color: rgba(176, 184, 204, 0.5);
}

.form-control-wrap input {
    text-align: left;
    /* ensure placeholder sticks to the left */
}

.subscribe-button {
    background: #3a3ea5;
    border: none;
    padding: 12px 28px;
    border-radius: 50px;
    color: white;
    cursor: pointer;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(58, 62, 165, 0.25);
    white-space: nowrap;
}

.subscribe-button:hover {
    background: #1938a8;
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(255, 107, 107, 0.4);
}

.hero-image-wrapper {
    margin-top: 80px;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding: 0 20px;
}

.hero-image-wrapper img {
    width: 120%;
    /* match original larger feel */
    max-width: auto;
    height: auto;
    border-radius: 20px;
    box-shadow: 0 16px 64px rgba(111, 124, 255, 0.32);
    transform: translateX(-10%);
    /* nudge left so image reads larger */
}

/* ========================================
   MODAL
   ======================================== */

.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 1000;
    align-items: center;
    justify-content: center;
}

.modal.active {
    display: flex;
}

.modal-content {
    background: linear-gradient(180deg, rgba(21, 21, 46, 0.98), rgba(10, 10, 30, 0.98));
    padding: 40px;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    max-width: 400px;
    width: 90%;
    position: relative;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
}

.modal-close {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--text-muted);
    transition: color 0.3s ease;
}

.modal-close:hover {
    color: #ffffff;
}

.modal-content h2 {
    margin-bottom: 25px;
    font-size: 1.5rem;
    color: #ffffff;
}

.modal-content form {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.modal-content input {
    padding: 12px 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.05);
    color: #ffffff;
    border-radius: 8px;
    font-size: 0.95rem;
    transition: border-color 0.3s ease;
}

.modal-content input::placeholder {
    color: rgba(176, 184, 204, 0.5);
}

.modal-content input:focus {
    outline: none;
    border-color: rgba(111, 124, 255, 0.5);
    box-shadow: 0 0 0 3px rgba(111, 124, 255, 0.1);
}

.modal-content button {
    padding: 12px 16px;
    background: linear-gradient(135deg, #6f7cff, #b46bff);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.modal-content button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(111, 124, 255, 0.3);
}

/* ========================================
   SECTIONS
   ======================================== */

section {
    padding: 80px 0;
}

.subtitle {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
}

.subtitle img {
    height: 20px;
}

.subtitle p {
    font-size: 14px;
    color: #ff6b6b;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* ========================================
   ABOUT SECTION
   ======================================== */

.about-section {
    background: var(--bg-main);
}

.about-heading {
    text-align: center;
    margin-bottom: 60px;
}

.about-heading h2 {
    margin: 20px 0 15px;
    line-height: 1.4;
}

.about-description {
    font-size: 1rem;
    color: var(--text-muted);
}


.about-images-1 {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-top: 40px;
}

/* Feature list pills (restores the bean-shaped icon before items) */
.feature-list {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 16px 22px;
    padding: 0;
    margin: 0;
    justify-content: center;
}

.feature-list li {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: rgba(255, 255, 255, 0.02);
    padding: 10px 22px;
    border-radius: 28px;
    color: #ffffff;
    font-weight: 600;
    font-size: 0.95rem;
    border: 1px solid rgba(255, 255, 255, 0.04);
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.02);
}

.icon-flare {
    display: inline-block;
    position: relative;
    width: 20px;
    height: 20px;
    flex: 0 0 20px;
    margin-left: -8px;
}

/* Draw a small rotated square (diamond) using currentColor to mimic the original glyph */
.icon-flare::before {
    content: '';
    position: absolute;
    left: 2px;
    top: 50%;
    transform: translateY(-50%) rotate(45deg);
    width: 12px;
    height: 12px;
    background: currentColor;
    border-radius: 2px;
    box-shadow: 0 6px 14px rgba(0, 0, 0, 0.45), 0 0 8px rgba(0, 0, 0, 0.15);
}

/* small highlight on the diamond to give depth */
.icon-flare::after {
    content: '';
    position: absolute;
    left: 6px;
    top: 42%;
    transform: translate(-50%, -50%);
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.85);
    border-radius: 50%;
    filter: blur(0.2px);
    opacity: 0.9;
}